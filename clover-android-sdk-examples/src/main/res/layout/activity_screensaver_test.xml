<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/unsupported"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/unsupported_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This device does not support Screensaver"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#ff8b0000" />

            <TextView
                android:id="@+id/unsupported_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clover C501 123456"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/supported"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/supported_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This device supports Screensaver"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#ff0000ff" />

        <TextView
            android:id="@+id/supported_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Clover C501 123456" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/available_components"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dream_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/bright_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bright time (minutes)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/label_barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="bright_time_label,dim_time_label" />

                    <EditText
                        android:id="@+id/bright_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:selectAllOnFocus="true"
                        android:ems="5"
                        android:gravity="end"
                        android:inputType="number"
                        tools:text="123"
                        app:layout_constraintBaseline_toBaselineOf="@id/bright_time_label"
                        app:layout_constraintStart_toEndOf="@id/label_barrier" />

                    <TextView
                        android:id="@+id/dim_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Dim time (minutes)"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bright_time" />

                    <EditText
                        android:id="@+id/dim_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:ems="5"
                        android:selectAllOnFocus="true"
                        android:gravity="end"
                        android:inputType="number"
                        tools:text="123"
                        app:layout_constraintBaseline_toBaselineOf="@id/dim_time_label"
                        app:layout_constraintStart_toEndOf="@id/label_barrier" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enabled?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <CheckBox
                        android:id="@+id/activate_on_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activate on sleep?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <CheckBox
                        android:id="@+id/activate_on_dock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activate on dock?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/dreams_enabled_on_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Dreams enabled on battery?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/start_dreaming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start dreaming" />

                    <Button
                        android:id="@+id/goto_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go to sleep" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>