<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".CreateCustomTenderTestActivity">

  <Button
      android:id="@+id/availTenders"
      android:layout_width="237dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_marginStart="26dp"
      android:text="Get Tenders" />

  <Button
      android:id="@+id/newTender"
      android:layout_width="211dp"
      android:layout_height="70dp"
      android:layout_below="@+id/result"
      android:layout_alignStart="@+id/availTenders"
      android:layout_alignEnd="@+id/availTenders"
      android:layout_marginStart="7dp"
      android:layout_marginTop="11dp"
      android:layout_marginEnd="-10dp"
      android:text="Create &quot;Clover Example Tender&quot;" />

  <TextView
      android:id="@+id/result"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="64dp"
      android:layout_marginEnd="158dp" />

</RelativeLayout>
</ScrollView>
