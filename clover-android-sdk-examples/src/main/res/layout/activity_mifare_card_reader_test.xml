<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MifareCardReaderTestActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/text_mifare_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Mifare Card Reader Test"/>

    <TextView
        android:id="@+id/text_mifare_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:text="Please tap on any button and tap the card on the device"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="CardUuid"
        android:id="@+id/button_carduuid"/>


    <TextView
        android:id="@+id/text_mifare_card_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on CardUuid...."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="UL Card Read"
        android:id="@+id/button_card_ul_read"/>


    <TextView
        android:id="@+id/text_mifare_card_ul_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on UL Card Read..."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="EV1 Card Read"
        android:id="@+id/button_card_ev1_read"/>


    <TextView
        android:id="@+id/text_mifare_card_ev1_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on Ev1Card Read...."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Classic Card Read"
        android:id="@+id/button_card_classic_read"/>


    <TextView
        android:id="@+id/text_mifare_card_classic_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on Classic Card Read...."/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Classic Card Write"
        android:id="@+id/button_card_classic_write"/>


    <TextView
        android:id="@+id/text_mifare_card_classic_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on Classic Card Write...."/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mobile driver license read"
        android:id="@+id/button_mobile_driver_license"/>


    <TextView
        android:id="@+id/text_mobile_driver_license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="Tap on Mobile Driver License...."/>

  </LinearLayout>

</ScrollView>
